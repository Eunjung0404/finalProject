<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mybatis.mapper.ChaTheaterMapper">

	<sql id="movieselect">

		<choose>
			<when test="moviecode!=null and moviecode!=''">
				and tm.moviecode=#{moviecode} and tm.theatercode=t.theatercode
			</when>
		</choose>
	</sql>
	<select id="areaCount" parameterType="hashmap" resultType="int">
		select count(*) from theater t, theater_move tm where t.area=#{area}
		<include refid="movieselect"/>
	</select>
	<select id="selectTheater" parameterType="string"
		resultType="hashmap">
		select theatername from theater where area=#{area}
	</select>
</mapper>